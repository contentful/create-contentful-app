{
  "packages": ["packages/**"],
  "command": {
    "publish": {
      "ignoreChanges": [
        ".*",
        "*.md",
        "*.spec.*",
        "*.test.*",
        "jest.config.js",
        "package.json",
        "package-lock.json",
        "tsconfig.json",
        "docs"
      ],
      "message": "chore(release): release [skip ci]"
    }
  },
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
