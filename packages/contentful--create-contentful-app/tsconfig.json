{
  "extends": "@tsconfig/node20/tsconfig.json",
  "exclude": ["node_modules", "**/*.spec.ts", "app-actions"],
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "typeRoots": ["./typings", "./node_modules/@types"]
  }
}
